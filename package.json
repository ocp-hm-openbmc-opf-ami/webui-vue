{
    "name": "webui-vue",
    "version": "0.1.0",
    "private": true,
    "description": "OpenBMC Web UI using the Vue.js front-end framework",
    "scripts": {
        "build": "check-node-version --package && vue-cli-service build",
        "docs:build": "vuepress build docs",
        "docs:serve": "vuepress dev docs",
        "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
        "lint": "vue-cli-service lint",
        "serve": "check-node-version --package && vue-cli-service serve",
        "test:unit": "vue-cli-service test:unit",
        "test:unit:debugger": "node --inspect-brk ./node_modules/jest/bin/jest.js --no-cache --runInBand",
        "test:update": "vue-cli-service test:unit -u"
    },
    "dependencies": {
        "@carbon/icons-vue": "10.28.0",
        "@fontsource/source-sans-pro": "5.0.5",
        "@novnc/novnc": "1.2.0",
        "axios": "0.21.4",
        "bootstrap": "4.6.0",
        "bootstrap-vue": "2.21.2",
        "canvas": "2.11.2",
        "chart.js": "3.9.1",
        "core-js": "3.9.1",
        "date-fns": "2.19.0",
        "date-fns-tz": "1.1.3",
        "file-saver": "2.0.5",
        "js-cookie": "2.2.1",
        "jszip": "3.10.1",
        "lodash": "4.17.21",
        "qrcode.vue": "1.7.0",
        "simple-keyboard": "3.5.43",
        "vue": "2.6.12",
        "vue-i18n": "8.24.2",
        "vue-json-pretty": "1.9.4",
        "vue-router": "3.5.1",
        "vuelidate": "0.7.6",
        "vuex": "3.6.2",
        "xterm": "4.11.0",
        "xterm-addon-attach": "0.6.0",
        "xterm-addon-fit": "0.5.0"
    },
    "devDependencies": {
        "@intlify/vue-i18n-loader": "1.1.0",
        "@vue/cli-plugin-babel": "4.5.19",
        "@vue/cli-plugin-eslint": "5.0.8",
        "@vue/cli-plugin-router": "4.5.19",
        "@vue/cli-plugin-unit-jest": "4.5.19",
        "@vue/cli-plugin-vuex": "4.5.19",
        "@vue/cli-service": "4.5.19",
        "@vue/eslint-config-prettier": "9.0.0",
        "@vue/test-utils": "1.3.0",
        "babel-eslint": "10.1.0",
        "babel-plugin-transform-require-context": "0.1.1",
        "check-node-version": "4.1.0",
        "compression-webpack-plugin": "6.0.3",
        "eslint": "8.57.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-vue": "9.22.0",
        "lint-staged": "10.5.4",
        "prettier": "3.2.5",
        "sass": "1.32.8",
        "sass-loader": "8.0.0",
        "vue-cli-plugin-i18n": "0.6.1",
        "vue-server-renderer": "2.7.16",
        "vue-template-compiler": "2.6.12",
        "vuepress": "1.8.2",
        "yorkie": "2.0.0"
    },
    "engines": {
        "node": ">=12.14.1"
    },
    "gitHooks": {
        "pre-commit": "lint-staged && vue-cli-service test:unit"
    },
    "lint-staged": {
        "*.{js,vue}": [
            "vue-cli-service lint",
            "git add"
        ]
    }
}